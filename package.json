{
  "name": "@waxam/waxaments",
  "version": "0.0.0",
  "description": "WaxaM web components",
  "wcfactory": {
    "askSASS": true,
    "askProps": true,
    "askHAX": true,
    "monorepo": "waxaments",
    "orgNpm": "@waxam",
    "orgGit": "waxam",
    "gitRepo": "git@github.com:waxam/waxaments.git",
    "sass": {
      "name": "rh-sass",
      "pkg": "@rhelements/rh-sass",
      "path": "rh-sass/rh-sass"
    }
  },
  "author": {
    "name": "waxam",
    "url": "https://github.com/waxam/waxaments"
  },
  "license": "Apache-2.0",
  "repository": "git@github.com:waxam/waxaments.git",
  "scripts": {
    "start": "bash scripts/preinstall.sh && yarn run storybook",
    "lerna": "lerna",
    "preinstall": "bash scripts/preinstall.sh",
    "postinstall": "bash scripts/postinstall.sh",
    "init": "lerna init",
    "test": "yarn run build && wct --configFile wct.conf.json test/index.html",
    "build": "lerna run build --no-bail",
    "publish": "echo 'NOTICE: You must run `lerna publish` manually'",
    "test-suite-inject": "node scripts/test-suite-inject.js",
    "storybook": "start-storybook -c .storybook -p 9001 -s ./elements",
    "build-storybook": "build-storybook -c .storybook -o ../../storybooks/lrnwebcomponents",
    "rebuild-wcfcache": "./node_modules/.bin/gulp",
    "new": "yarn run rebuild-wcfcache && wcf element && yarn run test-suite-inject && yarn install --link-duplicates"
  },
  "devDependencies": {
    "gulp-minify-html-literals": "1.1.7",
    "@emotion/core": "0.13.1",
    "@emotion/styled": "0.10.6",
    "@open-wc/storybook": "0.2.8",
    "@open-wc/webpack": "0.1.6",
    "@storybook/addon-knobs": "4.1.18",
    "babel-plugin-external-helpers": "6.22.0",
    "babel-plugin-transform-custom-element-classes": "0.1.0",
    "babel-plugin-transform-es2015-modules-umd": "6.24.1",
    "babel-preset-env": "1.7.0",
    "browser-sync": "2.26.7",
    "chalk": "3.0.0",
    "css-scss": "0.1.1",
    "decomment": "0.9.2",
    "del": "5.1.0",
    "dialog-polyfill": "0.5.0",
    "global": "4.4.0",
    "gulp-babel": "8.0.0",
    "gulp-clean-css": "4.2.0",
    "gulp-concat-util": "0.5.5",
    "gulp-copy": "4.0.1",
    "gulp-rename": "1.4.0",
    "gulp-replace": "1.0.0",
    "gulp-sass": "4.0.2",
    "gulp-sequence": "1.0.0",
    "gulp-shell": "0.7.1",
    "gulp-strip-css-comments": "2.0.0",
    "gulp-svg-sprite": "1.5.0",
    "gulp-trim": "1.0.2",
    "husky": "3.0.9",
    "inquirer-recursive": "0.0.6",
    "jest": "24.9.0",
    "lerna": "^3.18.4",
    "lint-staged": "9.4.3",
    "lodash": "4.17.19",
    "lodash.clonedeep": "4.5.0",
    "node-sass": "4.13.0",
    "polymer-webpack-loader": "2.0.3",
    "prettier": "1.19.1",
    "raw-loader": "3.1.0",
    "react": "*",
    "react-dom": "*",
    "requirejs": "2.3.6",
    "rollup": "1.26.5",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-delete": "1.1.0",
    "rollup-plugin-terser": "5.1.2",
    "strip-css-comments": "4.0.0",
    "trim": "0.0.1",
    "wct-browser-legacy": "1.0.2",
    "web-component-tester": "6.9.2",
    "webpack": "4.41.2",
    "whatwg-fetch": "3.0.0",
    "yo": "3.1.0",
    "gulp": "4.0.2",
    "gulp-terser": "1.2.0",
    "polymer-build": "3.1.4",
    "polymer-cli": "1.9.11",
    "glob": "^7.1.6",
    "@webcomponents/webcomponentsjs": "2.4.2",
    "@lrnwebcomponents/dynamic-import-registry": "^2.6.5",
    "@lrnwebcomponents/wc-autoload": "^2.6.5",
    "@lrnwebcomponents/deduping-fix": "2.4.0",
    "fetch-ie8": "1.5.0",
    "promise-polyfill": "8.1.3",
    "web-animations-js": "2.3.2"
  },
  "dependencies": {
    "@morbidick/lit-element-notify": "1.1.1"
  },
  "lint-staged": {
    "*.{js,json}": "prettier --write",
    "*.{png,jpeg,jpg,gif,svg}": "imagemin-lint-staged",
    "*.css": "stylelint --fix",
    "*.scss": "stylelint --syntax=scss --fix"
},
  "keywords": [
    "yeoman-generator",
    "custom-elements",
    "web-components",
    "webcomponents",
    "polymer",
    "lit-element",
    "skate-js",
    "slim-js",
    "twig",
    "lit-html",
    "vanillajs"
  ],
  "private": true,
  "npmClient": "yarn",
  "useWorkspaces": true,
  "workspaces": {
    "packages": [
      "elements/*",
      "themes/*"
    ],
    "nohoist": []
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run test-suite-inject > /dev/null && lint-staged"
    }
  }
}
